<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="68dp"
        android:layout_height="70dp"
        android:layout_marginTop="14dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedCornerStyle"
        android:layout_marginStart="30dp"
        android:src="@drawable/food"
        android:id="@+id/shop_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/shop_img"
        app:layout_constraintStart_toEndOf="@id/shop_img"
        android:layout_marginStart="14dp"
        android:textSize="16sp"
        android:id="@+id/shopName_tv"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:text="Black And Brown">

    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/money_img"
        app:layout_constraintStart_toStartOf="@id/shopName_tv"
        app:layout_constraintTop_toBottomOf="@id/shopName_tv"
        android:src="@drawable/money">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimum Rs.340"
        android:textSize="10sp"
        android:id="@+id/minimumPrice_tv"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toEndOf="@id/money_img"
        app:layout_constraintTop_toTopOf="@id/money_img"
        app:layout_constraintBottom_toBottomOf="@id/money_img"
        android:layout_marginStart="4dp">

    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/deliver"
        android:id="@+id/delivery_img"
        app:layout_constraintTop_toTopOf="@id/minimumPrice_tv"
        app:layout_constraintBottom_toBottomOf="@id/minimumPrice_tv"
        app:layout_constraintStart_toEndOf="@id/minimumPrice_tv"
        android:layout_marginStart="12dp">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deliveryCharges_tv"
        android:text="Free Delivery"
        app:layout_constraintTop_toTopOf="@id/delivery_img"
        app:layout_constraintBottom_toBottomOf="@id/delivery_img"
        app:layout_constraintStart_toEndOf="@id/delivery_img"
        android:textSize="8sp"
        android:textColor="@color/text_color"
        android:layout_marginStart="5dp">

    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/time"
        android:id="@+id/time_img"
        app:layout_constraintStart_toStartOf="@id/money_img"
        app:layout_constraintEnd_toEndOf="@id/money_img"
        app:layout_constraintTop_toBottomOf="@id/money_img"
        android:layout_marginTop="9dp">

    </ImageView>

    <TextView
        android:id="@+id/tvDeliveryTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Deliver in 20 Min"
        android:textColor="@color/text_color"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@id/time_img"
        app:layout_constraintStart_toEndOf="@id/time_img"
        app:layout_constraintTop_toTopOf="@id/time_img">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>