<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ForgetPasswordOTPFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="28dp">

    </ImageView>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="276dp"
        android:src="@drawable/mail"
        android:id="@+id/mail_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Your Mail"
        android:textSize="24sp"
        android:textColor="#01456B"
        android:id="@+id/checMail_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mail_img"
        android:textStyle="bold">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify the OTP from your email address"
        android:textSize="14sp"
        android:id="@+id/otpDesc_tv"
        android:textColor="#323232"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/checMail_tv"
        app:layout_constraintEnd_toEndOf="@id/checMail_tv"
        app:layout_constraintTop_toBottomOf="@id/checMail_tv">

    </TextView>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the OTP"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/otpDesc_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="21dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/text_color">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>