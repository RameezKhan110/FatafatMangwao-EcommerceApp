<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:layout_marginStart="38dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/favt_itemPic_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/user_fav_item_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="73dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="16dp"
            android:src="@drawable/pen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="19dp"
            android:src="@drawable/filledheart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/plus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs."
        android:layout_marginTop="12dp"
        android:layout_marginStart="5dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:id="@+id/Rs_tv"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/favt_itemPic_cl"
        app:layout_constraintStart_toStartOf="@id/favt_itemPic_cl">

    </TextView>

    <TextView
        android:id="@+id/tvMinimumAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="1260"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/Rs_tv"
        app:layout_constraintEnd_toEndOf="@+id/favt_itemPic_cl"
        app:layout_constraintStart_toEndOf="@id/Rs_tv"
        app:layout_constraintTop_toTopOf="@id/Rs_tv"
        app:layout_constraintVertical_bias="1.0">

    </TextView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="All in one makeup kit for routine"
        android:layout_marginTop="12dp"
        android:layout_marginStart="5dp"
        android:textSize="12sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@id/favt_itemPic_cl"
        app:layout_constraintEnd_toEndOf="@id/favt_itemPic_cl"
        app:layout_constraintTop_toBottomOf="@id/Rs_tv"
        app:layout_goneMarginTop="3dp"
        android:id="@+id/itemDesc_tv">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>